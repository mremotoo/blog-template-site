<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %> 

  <body>

    <!-- minus sign to not escape special characters and not to end up string value instead of raw html-->
    <%- include('./partials/nav.ejs') %> 

    <div class="blog content">
      <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>

        <h3 class="title"><%= blog.title %> </h3>
        <p class="snippet"><%= blog.snippet %></p>

      <% }) %>
    <% } else { %>
      <p>No blogs to display.</p>

    <% } %> 

    </div>
  </body>
  <%- include('./partials/footer.ejs') %> 
</html>
